<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="LOG_DIR" value="c:/home/usuario/projetos/reportsadmin/log" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<property name="LOG_FILE" value="baixaRelatoriosDiariosTarefa" />	
	<appender name="FILE_BAIXARELATORIOSDIARIOSTAREFA"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_DIR}/${LOG_FILE}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_DIR}/%d{yyyy/MM}/${LOG_FILE}.gz</fileNamePattern>

			<!-- keep 30 days' worth of history capped at 3GB total size -->
			<maxHistory>1</maxHistory>
			<totalSizeCap>2MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>
				%d{dd-MM-yyyy HH:mm:ss} > %msg%n
			</pattern>
		</encoder>
	</appender>
	
